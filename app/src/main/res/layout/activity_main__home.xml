<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main__home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
>

    <LinearLayout
        android:id="@+id/content_group_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_toolbar"></include>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/content_group_zhong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content_group_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/content_group_bottom"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:background="#fff"
            android:clipChildren="false"
            android:orientation="horizontal">
            <!--模块一-->
            <LinearLayout

                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_normal" />

                <TextView
                    android:id="@+id/tlt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="消息"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--模块二-->
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_normal" />

                <TextView
                    android:id="@+id/tlt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="统计"
                    android:textSize="14sp" />
            </LinearLayout>    <!--模块二-->
            <LinearLayout
                android:id="@+id/line5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:clipChildren="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img5"
                    android:scaleType="centerCrop"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/src_image_btn_bill_add" />

            </LinearLayout>
            <!--模块三-->
            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_normal" />

                <TextView
                    android:id="@+id/tlt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="办公"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--模块四-->
            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_normal" />

                <TextView
                    android:id="@+id/tlt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--此L布局是所有的空间集合-->
        </LinearLayout>
        <!--此R布局是后面的背景-->


    <!--这是最上覆盖布局-->
    <!--<de.hdodenhof.circleimageview.CircleImageView-->
